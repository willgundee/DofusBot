<Window x:Class="Gofus.NouveauNom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gofus"
        mc:Ignorable="d"
        Title="Entrez un titre" Height="130" Width="413"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Veuillez choisir un nouveau nom : " VerticalAlignment="Bottom" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"/>
        <TextBox Name="tb_NewName" Height="20" Width="350" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" KeyDown="tb_NewName_KeyDown"/>
        <Button Width="100" Height="20" Content="Confirmer" Click="Button_Click"  Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Window>
