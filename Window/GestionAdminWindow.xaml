<Window x:Class="Gofus.GestionAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gofus"
        mc:Ignorable="d"
        Title="Gérer les comptes" Height="498.214" Width="450" ResizeMode="NoResize" Icon="/Gofus;component/Resources/Gofus.png">
    <Grid Margin="0,10,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" ItemsSource="{Binding lstUtilisateurs}"  Margin="10,0,0,80" VerticalAlignment="Bottom" Height="390" Width="424" ColumnWidth="*" AutoGenerateColumns="False" SelectionChanged="dataGrid_SelectionChanged" >
        </DataGrid>
        <Button x:Name="btnSauvegarder" Content="Sauvegarder" HorizontalAlignment="Left" Margin="10,407,0,0" VerticalAlignment="Top" Width="134" Click="btnSauvegarder_Click" Height="43" RenderTransformOrigin="0.52,8.945"/>
        <Button x:Name="btnAnnuler" Content="Annuler" HorizontalAlignment="Left" Margin="300,407,0,0" VerticalAlignment="Top" Width="134" Height="43" Click="btnAnnuler_Click"/>
    </Grid>
</Window>
