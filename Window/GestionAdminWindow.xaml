        <Button x:Name="btnRefresh" Content="Rafraichir" HorizontalAlignment="Left" Margin="181,444,0,0" VerticalAlignment="Top" Width="94" Click="btnRefresh_Click" RenderTransformOrigin="-0.49,-0.371" Height="43"/>
    </Grid>
</Window>
