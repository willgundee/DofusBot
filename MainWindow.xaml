                    <System:String>void</System:String>
                    <System:String>volatile</System:String>
                    <System:String>while</System:String>
                </wf:CodeTextBox.CodeWords_Keywords>
                <wf:CodeTextBox.CodeWords_ScopeOperators>
                    <System:String>.</System:String>
                </wf:CodeTextBox.CodeWords_ScopeOperators>
                <wf:CodeTextBox.CodeWords_Comments>
                    <System:String>//</System:String>
                </wf:CodeTextBox.CodeWords_Comments>
                <wf:CodeTextBox.CodeWords_Chaines>
                    <System:String>"</System:String>
                    <System:String>'</System:String>
                </wf:CodeTextBox.CodeWords_Chaines>
            </wf:CodeTextBox>
        </WindowsFormsHost>
        <Button Name="btn_run" Content="Run" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" Width="75" Height="40" Click="btn_run_Click"/>
    </Grid>
</Window>
