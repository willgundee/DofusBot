<UserControl x:Class="Gofus.SortDesc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gofus"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="250">
    <Grid Background="AliceBlue">
        <Image Name="Imgsort" Height="125" Width="125" Source="../Resources/vide.png" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="20"/>
        <Label Name="lblTNom" Content=" Nom du sort : " FontSize="16" VerticalAlignment="Center" Margin="0,0,0,60"/>
        <Label Name="lblNom" FontSize="16" Height="30" VerticalAlignment="Center"/>
        <Label Name="lblTDescription" Content=" Description : " FontSize="16" VerticalAlignment="Center" Margin="0,80,0,0"/>
        <Label Name="lblDescription" FontSize="16"  VerticalAlignment="Center" Margin="0,140,0,0"/>
    </Grid>
</UserControl>
