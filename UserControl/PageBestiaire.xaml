<UserControl x:Class="Gofus.PageBestiaire"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gofus"
             mc:Ignorable="d" 
             d:DesignHeight="560" d:DesignWidth="577">
    <Grid Name="dgBestiaire" Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="288*"/>
            <ColumnDefinition Width="289*"/>
        </Grid.ColumnDefinitions>

        <Label Name="lblNomBestiaire" Content="Bestiaire :" FontSize="16" Margin="10,50,0,0"/>
        <ListBox Name="lbxBestiaire" Background="LightGray" Grid.Column="0" Margin="10,80,37,80" ScrollViewer.HorizontalScrollBarVisibility="Disabled"  />
        <Label Name="lblDescription" Content="Description" VerticalAlignment="Top" Height="30" Grid.Column="1" FontSize="16" Margin="40,10,40,0" />
        <ItemsControl Name="lbxDescBestiaire" Background="LightGray" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Center" Margin="40,40,20,20" Width="240" Height="500" ScrollViewer.HorizontalScrollBarVisibility="Disabled" />

    </Grid>
</UserControl>
