<UserControl x:Class="Gofus.PageDoc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gofus"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="557">
    <Grid>
        <TabControl Name="tabDoc" Background="Gray">
            <TabItem Header="Gofus#">
                <TextBlock Height="450" Width="500" VerticalAlignment="Bottom" Background="AliceBlue"/>
            </TabItem>
            <TabItem Header="Sorts">
                <ContentControl Name="PGSort"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
