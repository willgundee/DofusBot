<UserControl x:Class="test.PagePerso"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:test"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="557">


    <Grid x:Name="grdperso" Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="302*"></RowDefinition>
            <RowDefinition Height="233*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="231*"/>
            <ColumnDefinition Width="284*"/>
        </Grid.ColumnDefinitions>
        <Label Name="lblLevelEntite" Margin="90,78,73.427,188" Content="Niv."/>
        <Image x:Name="Imgfond"  Source="../resources/fondEquipement.jpg"  Height="260" Width="283" Grid.RowSpan="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="16.573,43,12,0"  Grid.Column="1" />
        <Grid x:Name="grdEquip"  Grid.Column="1" Margin="16.573,43,12,1.435">
            <Grid.RowDefinitions>
                <RowDefinition Height="18*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="41*"/>
                <RowDefinition Height="16*"/>
                <RowDefinition Height="43*"/>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="58*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="43*"/>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="39*"/>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="41*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="29*"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="imageAmulette" Source="../resources/vide.png" MouseLeftButtonDown="image_MouseDown" Grid.Column="6" Grid.Row="2"/>
            <Image x:Name="imageCape" Source="../resources/vide.png" MouseLeftButtonDown="image_MouseDown" Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>
            <Image x:Name="imageCasque" Source="../resources/vide.png" MouseLeftButtonDown="image_MouseDown" Grid.Column="9" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="2"/>
            <Image x:Name="imageCeinture" Source="../resources/vide.png" MouseLeftButtonDown="image_MouseDown" Grid.ColumnSpan="2" Grid.Column="6" Grid.Row="4" Grid.RowSpan="2" />
            <Image x:Name="imageAnneau1" Source="../resources/vide.png" MouseLeftButtonDown="image_MouseDown" Grid.Column="2"  Grid.Row="4"/>
            <Image x:Name="imageAnneau2" Source="../resources/vide.png" MouseLeftButtonDown="image_MouseDown" Grid.Column="10" Grid.Row="4"/>
            <Image x:Name="imageBotte" Source="../resources/vide.png" MouseLeftButtonDown="image_MouseDown" Grid.Column="5" Grid.ColumnSpan="3" Grid.Row="7"/>
            <Image x:Name="imageArme" Source="../resources/vide.png" MouseLeftButtonDown="image_MouseDown" Grid.Column="9" Grid.ColumnSpan="3" Grid.Row="7"/>

        </Grid>
        <Label Grid.Column="1"  HorizontalAlignment="Center" FontSize="25" VerticalAlignment="Top" Margin="88,0,46,0" Content="Équipement" Width="178"/>
        <Rectangle x:Name="rect"   Height="75" Width="75" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0" Margin="10,51,0,0" Fill="#FFF0E9E9"   />
        <Image x:Name="Imgclasse" Height="75" Width="75" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0" Margin="10,51,0,0"   />
        <Label x:Name="lblClasse" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Content="Classe : "/>
        <Label x:Name="lblNomClasse" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="62,10,0,0" Height="33" Width="102"/>
        <Label x:Name="lblScript" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="41,24,0,187" FontSize="15" Height="33">Script :</Label>
        <ComboBox x:Name="cbScript" Grid.Column="1" Grid.Row="1" Margin="101,18,60,188"  />
        <Label x:Name="lblStats" VerticalAlignment="Center" Margin="0,135,283,123" Content="Statistique" Grid.ColumnSpan="2" Height="36" />
        <Label x:Name="lblPCap" Content="Point Capital:" Width="100" Grid.Column="0" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,30" />
        <Label x:Name="lblNbPointsC" Content="11" Width="34" Height="31" Grid.Row="1" HorizontalAlignment="Center" FontSize="14" VerticalAlignment="Bottom" Margin="79,0,140.427,27" Grid.Column="0" />
        <!--todo mettre hidden quand pas de point capital-->
        <Button x:Name="btnVitalite" Grid.Row="1" Content="+" HorizontalAlignment="Right" Margin="0,15,20,0" VerticalAlignment="Top" Width="25" Height="20" Grid.Column="0" Visibility="Hidden"       Click="btnStatsPlus_Click"/>
        <Button x:Name="btnSagesse"  Grid.Row="1" Content="+" HorizontalAlignment="Right" Margin="0,40,20,0" VerticalAlignment="Top" Width="25" Height="20" Grid.Column="0" Visibility="Hidden"        Click="btnStatsPlus_Click"/>
        <Button x:Name="btnForce"  Grid.Row="1" Content="+" HorizontalAlignment="Right" Margin="0,65,20,0" VerticalAlignment="Top" Width="25" Height="20" Grid.Column="0" Visibility="Hidden"         Click="btnStatsPlus_Click"/>
        <Button x:Name="btnIntelligence"  Grid.Row="1" Content="+" HorizontalAlignment="Right" Margin="0,90.565,20,0" VerticalAlignment="Top" Width="25" Height="20" Grid.Column="0" Visibility="Hidden"  Click="btnStatsPlus_Click"/>
        <Button x:Name="btnChance"  Grid.Row="1" Content="+" HorizontalAlignment="Right" Margin="0,115,20,90" VerticalAlignment="Center" Width="25" Height="20" Grid.Column="0" Visibility="Hidden"    Click="btnStatsPlus_Click"/>
        <Button x:Name="btnAgilite"  Grid.Row="1" Content="+" HorizontalAlignment="Right" Margin="0,140,20,65" VerticalAlignment="Center" Width="25" Height="20" Grid.Column="0" Visibility="Hidden"   Click="btnStatsPlus_Click"/>

        <DataGrid x:Name="dgStats" IsReadOnly="True" CanUserAddRows="False" CanUserSortColumns="False" HorizontalAlignment="Left"  Height="295" Width="195"  VerticalAlignment="Bottom" Margin="5,0,0,63" Grid.RowSpan="2"  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom"  Binding="{Binding Nom}" FontSize="16" Width="3*" />
                <DataGridTextColumn Header="Valeur" Binding="{Binding Valeur}" FontSize="16" Width="*"/>
            </DataGrid.Columns>


        </DataGrid>
        <Label x:Name="lblDommage"  Content="Dommages"  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="239,40,0,155" Height="31" Grid.Row="1" RenderTransformOrigin="0.028,0.597" Grid.ColumnSpan="2"/>
        <DataGrid x:Name="dgDommage" IsReadOnly="True" CanUserAddRows="False" CanUserSortColumns="False"  HorizontalAlignment="Left"  Height="150" Width="150"  VerticalAlignment="Bottom" AutoGenerateColumns="False" Margin="239,0,0,5" Grid.Row="1" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom"  Binding="{Binding Nom}" FontSize="15" Width="2*" />
                <DataGridTextColumn Header="Valeur" Binding="{Binding Valeur}" FontSize="15" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="lblResistance" Grid.Row="1" Grid.Column="1" Content="Résistances" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="157,43,71,160" Height="23" Width="79"></Label>

        <DataGrid x:Name="dgResistance" IsReadOnly="True" CanUserAddRows="False" CanUserSortColumns="False"  HorizontalAlignment="Right"  Height="150" Width="150"  VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1" AutoGenerateColumns="False" Margin="0,0,0,5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom"  Binding="{Binding Nom}" FontSize="15" Width="2*" />
                <DataGridTextColumn Header="Valeur" Binding="{Binding Valeur}" FontSize="15" Width="*"/>
            </DataGrid.Columns>

        </DataGrid>
        <ProgressBar Name="pgbExp" HorizontalAlignment="Left" Height="15" Margin="100,58,0,0" VerticalAlignment="Top" Width="100" Foreground="DarkRed" />
    </Grid>


</UserControl>
