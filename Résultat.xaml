<Window x:Class="Gofus.Résultat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gofus"
        mc:Ignorable="d"
        Title="Résultat" Height="200" Width="400">
    <Grid Name="dgResultat" Background="Gray" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Name="lblGagnant" Content="Gagnant : " Grid.Row="0"/>
        <Label Name="NomPersoG" Grid.Row="0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="60,0,0,0"/>
        <Image Name="imgG" Height="50" Width="50" Grid.Row="0" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        
        <Label Name="lblPerdant" Content="Perdant : " Grid.Row="1"/>
       
        <Label Name="NomPersoP" Grid.Row="1" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="60,0,0,0"/>

        <Image Name="imgP" Height="50" Width="50" Grid.Row="1" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>



    </Grid>
</Window>
